{
  "extends": "fastify-tsconfig",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": false,
    "strict": true,
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts", "src/@types", "src/modules/auth/index.js"],
  "exclude": ["./node_modules"]
}
