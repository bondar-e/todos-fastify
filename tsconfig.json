{
  "extends": "fastify-tsconfig",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "index.d.ts"],
  "exclude": ["node_modules"]
}
